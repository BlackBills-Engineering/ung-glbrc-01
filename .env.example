# Environment configuration file
# Copy this to .env and modify as needed

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Serial Communication Settings
SERIAL_BAUDRATE=9600
SERIAL_TIMEOUT=1.0
SERIAL_WRITE_TIMEOUT=1.0

# Pump Discovery Settings
MIN_PUMP_ADDRESS=1
MAX_PUMP_ADDRESS=16
DISCOVERY_TIMEOUT=2.0

# Monitoring Settings
MONITOR_INTERVAL=30
STATUS_HISTORY_SIZE=100

# Logging Settings
LOG_LEVEL=INFO

# Thread Pool Settings
MAX_WORKERS=10

# Protocol Settings
COMMAND_DELAY=0.1
MAX_RETRIES=3

# Preferred COM Ports (comma-separated)
# Leave empty to scan all available ports
PREFERRED_COM_PORTS=COM1,COM2,COM3
